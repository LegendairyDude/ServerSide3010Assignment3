<head>
    <link rel="stylesheet" href="/styles.css" type="text/css">

    <title>Mini Message Board</title>
</head>

<body>
    <h2>
        <%= title %>
    </h2><br>
    <ul>
        <% messages.forEach(message=> { %>
            <li>

                <b>
                    <%= message.user%>&colon;&nbsp;
                </b>
                <%= message.text %>
                    <ul>
                        <li>

                            Date Added&colon;&nbsp;<%= message.added.toLocaleString() %>
                        </li>
                    </ul>
            </li>
            <% }); %>
    </ul>
    <h3><a href="/new">Add a New Message</a></h3>

</body>

</html>